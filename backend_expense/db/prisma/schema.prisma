generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  username String   
  email    String    @unique
  password String
  expenses Expense[]
}

model Expense {
  id        Int      @id @default(autoincrement())
  title     String
  amount    Float
  category  String
  date      DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}
